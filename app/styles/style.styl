@import 'nib'

body
    background #FCFCFC

.fill
    background-color #353535
    width 100%
    height 4px

#title
    font-weight bold

#descrition
    margin-left 150px

#editor
    position relative
    margin-left 0
    height 100px

.PlayBtn
    width 35px
    cursor pointer

.github
    width 52px
    opacity 0.1
    transition all .2s ease
    &:hover
        opacity 0.8

.flex
    display flex
    flex-direction row
    align-items center

.label
    margin-right 10px

.panel
    .panel-body
        padding 0px!important

    .panel-heading
        .panel-title
            font-size 22px
            font-weight 300
            position relative
            top 5px
            left 20px
            display inline

.progress
    margin-bottom 0px
    height initial

footer
    border-top 1px solid #e5e5e5
    text-align center
    color #353535
    height 140px
    padding 30px
    ul
        margin-top 15px
        li
            color #888
            display inline
            padding 0 10px
