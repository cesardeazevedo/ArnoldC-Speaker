@import 'nib'

body
    background whitesmoke

#fill
    background-color #353535
    width 100%
    height 4px

#editor
    position relative
    margin-left 0
    height 100px

.PlayBtn
    width 35px
    cursor pointer

.github
    width 52px
    opacity 0.1
    transition all .2s ease
    &:hover
        opacity 0.8

.panel
    .panel-body
        padding 0px!important

    .panel-heading
        .panel-title
            font-size 22px
            font-weight 300
            position relative
            top 3px
            left 20px
            display inline

